{
  "datasets": {
    "ECMWF/ERA5/DAILY": {
      "name": "ERA5 Daily Aggregates",
      "provider": "ECMWF",
      "start_date": "1979-01-02",
      "end_date": "2020-07-09",
      "temporal_resolution": "daily",
      "pixel_size_m": 27830,
      "snippet_type": "ImageCollection",
      "geographic_coverage": "Global",
      "description": "ERA5 daily surface climate variables - automatically converted units",
      "bands": {
        "temperature_max": {
          "band_name": "maximum_2m_air_temperature",
          "unit": "°C",
          "original_unit": "K",
          "scaling_factor": 1.0,
          "offset": -273.15,
          "description": "Daily maximum 2m air temperature"
        },
        "temperature_min": {
          "band_name": "minimum_2m_air_temperature",
          "unit": "°C",
          "original_unit": "K",
          "scaling_factor": 1.0,
          "offset": -273.15,
          "description": "Daily minimum 2m air temperature"
        },
        "temperature_mean": {
          "band_name": "mean_2m_air_temperature",
          "unit": "°C",
          "original_unit": "K",
          "scaling_factor": 1.0,
          "offset": -273.15,
          "description": "Daily mean 2m air temperature"
        },
        "precipitation": {
          "band_name": "total_precipitation",
          "unit": "mm/day",
          "original_unit": "m",
          "scaling_factor": 1000.0,
          "offset": 0.0,
          "description": "Daily total precipitation"
        }
      },
      "supports_analysis": ["temperature", "precipitation"],
      "recommended_indices": {
        "temperature": ["TXx", "TNn", "DTR", "TX90p", "TN10p", "FD", "SU"],
        "precipitation": ["RX1day", "CDD", "PRCPTOT", "R95p", "R10mm", "SDII"]
      }
    },
    "NASA/ORNL/DAYMET_V4": {
      "name": "Daymet V4 Daily Meteorology",
      "provider": "ORNL DAAC (US DOE)",
      "start_date": "1980-01-01",
      "end_date": "2023-12-31",
      "temporal_resolution": "daily",
      "pixel_size_m": 1000,
      "snippet_type": "ImageCollection",
      "geographic_coverage": "North America",
      "description": "Daily 1-km gridded weather data for North America",
      "bands": {
        "temperature_max": {
          "band_name": "tmax",
          "unit": "°C",
          "original_unit": "°C",
          "scaling_factor": 1.0,
          "offset": 0.0,
          "description": "Daily maximum temperature"
        },
        "temperature_min": {
          "band_name": "tmin",
          "unit": "°C",
          "original_unit": "°C",
          "scaling_factor": 1.0,
          "offset": 0.0,
          "description": "Daily minimum temperature"
        },
        "precipitation": {
          "band_name": "prcp",
          "unit": "mm/day",
          "original_unit": "mm",
          "scaling_factor": 1.0,
          "offset": 0.0,
          "description": "Daily precipitation"
        }
      },
      "supports_analysis": ["temperature", "precipitation"],
      "recommended_indices": {
        "temperature": ["TXx", "TNn", "DTR", "TX90p", "TN10p", "FD", "SU"],
        "precipitation": ["RX1day", "CDD", "PRCPTOT", "R95p", "R10mm", "SDII"]
      }
    }
  },
  "climate_indices": {
    "TXx": {
      "name": "Maximum Temperature",
      "description": "Monthly maximum value of daily maximum temperature",
      "unit": "°C",
      "category": "temperature",
      "complexity": "simple",
      "required_bands": ["temperature_max"],
      "temporal_aggregation": "monthly",
      "etccdi_standard": true
    },
    "TNn": {
