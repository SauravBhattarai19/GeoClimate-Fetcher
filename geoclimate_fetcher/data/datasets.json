  "climate_indices": {
    "TXx": {
      "name": "Maximum Temperature",
      "description": "Monthly maximum value of daily maximum temperature",
      "unit": "°C",
      "category": "temperature",
      "complexity": "simple",
      "required_bands": ["temperature_max"],
      "temporal_aggregation": "monthly",
      "etccdi_standard": true
    },
    "TNn": {
      "name": "Minimum Temperature",
      "description": "Monthly minimum value of daily minimum temperature",
      "unit": "°C",
      "category": "temperature",
      "complexity": "simple",
      "required_bands": ["temperature_min"],
      "temporal_aggregation": "monthly",
      "etccdi_standard": true
    },
    "DTR": {
      "name": "Diurnal Temperature Range",
      "description": "Monthly mean difference between daily maximum and minimum temperature",
