      "unit": "days",
      "category": "precipitation",
      "complexity": "simple",
      "required_bands": ["precipitation"],
      "temporal_aggregation": "annual",
      "etccdi_standard": true,
      "threshold_config": {
        "param": "threshold",
        "default": 1.0,
        "unit": "mm",
        "min_value": 0.1,
        "max_value": 10.0,
        "help": "Daily precipitation threshold for defining dry days"
      }
    },
    "CWD": {
      "name": "Consecutive Wet Days",
      "description": "Annual maximum number of consecutive days with precipitation ≥ threshold mm",
      "unit": "days",
      "category": "precipitation",
      "complexity": "simple",
      "required_bands": ["precipitation"],
      "temporal_aggregation": "annual",
      "etccdi_standard": true,
      "threshold_config": {
        "param": "threshold",
