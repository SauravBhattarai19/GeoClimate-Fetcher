      "category": "temperature",
      "complexity": "simple",
      "required_bands": ["temperature_max", "temperature_min"],
      "temporal_aggregation": "monthly",
      "etccdi_standard": true
    },
    "RX1day": {
      "name": "Maximum 1-day Precipitation",
      "description": "Monthly maximum 1-day precipitation amount",
      "unit": "mm",
      "category": "precipitation",
      "complexity": "simple",
      "required_bands": ["precipitation"],
      "temporal_aggregation": "monthly",
      "etccdi_standard": true
    },
    "CDD": {
